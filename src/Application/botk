#!/usr/bin/env php
<?php

// Autoload works well both if this source is placed in src/Application or in /vendor/bin
$autoloadFile = file_exists(__DIR__.'/../../vendor/autoload.php')
	?(__DIR__.'/../../vendor/autoload.php')
	:(__DIR__.'/../../../../autoload.php');

require_once $autoloadFile;


use Symfony\Component\Console\Application;

$application = new Application( 'botk', '1.0.0');
$application->add(new \BOTK\Command\PostmanReasoningCommand());
$application->run();